<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="DialNumberTheme" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">#505050</item>
        <item name="android:textSize">32sp</item>
    </style>

</resources>
